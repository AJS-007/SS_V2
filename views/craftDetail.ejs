
<h2 class="text-2xl font-bold"><%= craft.name %></h2>
<p class="text-sm text-gray-600">By <%= craft.seller?.name %> • <%= craft.originState %></p>

<div class="mt-4 grid md:grid-cols-2 gap-6">
  <div>
    <img src="<%= (craft.images && craft.images[0]) || '/images/placeholder.png' %>" class="w-full rounded" />
  </div>
  <div>
    <p><%= craft.description %></p>
    <p class="mt-3 font-bold">₹<%= craft.price %></p>
    <div class="mt-4">
      <a class="text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:bg-gradient-to-l focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" href="/ai/<%= craft._id %>">Learn About This Craft (AI)</a>
    </div>
    <br>
    <div>
      <form method="GET" action="/marketplace/<%= craft._id %>/buy">
        <button class="py-3 px-4 my-X bg-blue-600 border-blue-700" style="color: white;">Buy Now</button>
      </form>
    </div>
    
  </div>
</div>
