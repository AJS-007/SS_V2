 <main class="max-w-6xl mx-auto p-4 flex-grow">
    <!-- Welcome -->
    <section class="mb-8">
      <h2 class="text-3xl font-semibold text-amber-900 mb-2">
        Welcome, <span class="capitalize"><%= user.username %></span> from 
        <span class="capitalize"><%= user.sellerInfo?.village || 'your village' %></span>, 
        <span class="capitalize"><%= user.sellerInfo?.state || 'your state' %></span>!
      </h2>
      <p class="text-amber-700 font-medium">Role: Seller</p>
    </section>

    <!-- Overview Cards -->
    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 mb-12">
      <!-- Total Products -->
      <div class="bg-amber-100 rounded-lg shadow p-6 flex items-center space-x-4">
        <div class="bg-amber-300 p-3 rounded-full text-amber-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" 
               viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M3 10h18M7 6h10M7 14h6M7 18h10" />
          </svg>
        </div>
        <div>
          <p class="text-3xl font-bold text-amber-900"><%= crafts.length %></p>
          <p class="text-amber-800 font-medium">Total Products</p>
        </div>
      </div>

      <!-- Featured Products -->
      <div class="bg-amber-100 rounded-lg shadow p-6 flex items-center space-x-4">
        <div class="bg-amber-300 p-3 rounded-full text-amber-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" 
               viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M11 17l-5-5m0 0l5-5m-5 5h12" />
          </svg>
        </div>
        <div>
          <p class="text-3xl font-bold text-amber-900">
            <%= crafts.filter(c => c.featured).length %>
          </p>
          <p class="text-amber-800 font-medium">Featured Products</p>
        </div>
      </div>

      <!-- Joined On -->
      <div class="bg-amber-100 rounded-lg shadow p-6 flex items-center space-x-4">
        <div class="bg-amber-300 p-3 rounded-full text-amber-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" 
               viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M12 8v4l3 3" />
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </div>
        <div>
          <p class="text-amber-800 font-medium">Joined On</p>
          <p><%= new Date(user.createdAt).toLocaleDateString('en-IN', {
            day: 'numeric', month: 'short', year: 'numeric'
          }) %></p>
        </div>
      </div>

      <!-- Location -->
      <div class="bg-amber-100 rounded-lg shadow p-6 flex items-center space-x-4">
        <div class="bg-amber-300 p-3 rounded-full text-amber-900">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" 
               viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2z" />
            <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M12 22s8-4.5 8-10a8 8 0 1 0-16 0c0 5.5 8 10 8 10z" />
          </svg>
        </div>
        <div>
          <p class="text-amber-800 font-medium">Location</p>
          <p class="capitalize">
            <%= user.sellerInfo?.village || 'N/A' %>, <%= user.sellerInfo?.state || 'N/A' %>, <%= user.sellerInfo?.pincode || 'N/A' %>
          </p>
        </div>
      </div>
    </section>

    <!-- Add Product Button -->
    <div class="mb-6 flex justify-end">
      <a href="/crafts/add" 
         class="inline-block bg-amber-700 hover:bg-amber-800 text-white font-semibold py-2 px-4 rounded shadow">
        ➕ Add New Product
      </a>
    </div>

    <!-- Products Table -->
    <section class="overflow-x-auto bg-white rounded shadow">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-amber-800 text-white">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-semibold">Image</th>
            <th class="px-4 py-3 text-left text-sm font-semibold">Name</th>
            <th class="px-4 py-3 text-left text-sm font-semibold">Category</th>
            <th class="px-4 py-3 text-left text-sm font-semibold">Price (₹)</th>
            <th class="px-4 py-3 text-left text-sm font-semibold">Weight (Kg)</th>
            <th class="px-4 py-3 text-center text-sm font-semibold">Featured</th>
            <th class="px-4 py-3 text-left text-sm font-semibold">Created At</th>
            <th class="px-4 py-3 text-center text-sm font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% if (crafts.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center p-6 text-gray-500 italic">
                You have no products listed yet.
              </td>
            </tr>
          <% } else { %>
            <% crafts.forEach(craft => { %>
              <tr class="hover:bg-amber-50">
                <td class="px-4 py-3">
                  <% if (craft.images && craft.images.length > 0) { %>
                    <img src="<%= craft.images[0] %>" alt="<%= craft.name %>" 
                         class="h-12 w-12 object-cover rounded" />
                  <% } else { %>
                    <div class="h-12 w-12 bg-gray-200 rounded flex items-center justify-center text-gray-400 text-xs">
                      No Image
                    </div>
                  <% } %>
                </td>
                <td class="px-4 py-3 capitalize font-medium"><%= craft.name %></td>
                <td class="px-4 py-3 capitalize"><%= craft.category || 'N/A' %></td>
                <td class="px-4 py-3">₹<%= craft.price?.toFixed(2) || '0.00' %></td>
                <td class="px-4 py-3"><%= craft.weightKg || '-' %></td>
                <td class="px-4 py-3 text-center text-amber-700">
                  <%= craft.featured ? '✔' : '❌' %>
                </td>
                <td class="px-4 py-3">
                  <%= new Date(craft.createdAt).toLocaleDateString('en-IN', {
                    day: 'numeric', month: 'short', year: 'numeric'
                  }) %>
                </td>
                <td class="px-4 py-3 text-center space-x-2">
                  <a href="/crafts/edit/<%= craft._id %>" 
                     class="text-amber-700 hover:text-amber-900 font-semibold">Edit</a>
                  <form action="/crafts/delete/<%= craft._id %>" method="POST" class="inline">
                    <button type="submit" 
                            class="text-red-600 hover:text-red-800 font-semibold"
                            onclick="return confirm('Are you sure you want to delete this product?');">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>

  