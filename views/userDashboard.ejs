<h2 class="text-xl font-bold mb-6">Welcome, <%= user.username %>!</h2>
<a href="/auth/logout" class="text-red-500 underline">Logout</a>

<div class="mt-8">
  <h3 class="text-lg font-semibold mb-4">Your Orders</h3>

  <% if (!orders.length) { %>
    <p>No orders yet!</p>
  <% } else { %>
    <!-- Pending Orders -->
    <div>
      <h4 class="text-md font-semibold mb-2">Pending Orders</h4>
      <% orders.filter(o => !o.isDelivered && o.status !== 'Cancelled').forEach(o => { %>
        <div class="flex items-center mb-4 p-4 bg-white shadow rounded">
          <img src="<%= (o.craft.images && o.craft.images[0]) || '/images/placeholder.png' %>" alt="Craft" class="w-16 h-16 rounded mr-4">
          <div class="flex-1">
            <p class="font-medium"><%= o.craft.name %></p>
            <p>Qty: <%= o.quantity %> | Total: ₹<%= o.totalPrice %></p>
            <p class="text-sm text-gray-500">Ordered: <%= new Date(o.createdAt).toLocaleDateString() %></p>
          </div>
          <div class="flex space-x-2">
            <form action="/auth/dashboard/orders/<%= o._id %>/cancel" method="POST">
              <button class="px-3 py-1 text-white bg-red-500 rounded hover:bg-red-600">Cancel</button>
            </form>
            <a href="/auth/dashboard/orders/<%= o._id %>/edit" class="px-3 py-1 text-white bg-blue-500 rounded hover:bg-blue-600">Edit</a>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Delivered Orders -->
    <div class="mt-8">
      <h4 class="text-md font-semibold mb-2">Delivered Orders</h4>
      <% orders.filter(o => o.isDelivered || o.status === 'Delivered').forEach(o => { %>
        <div class="flex items-center mb-4 p-4 bg-green-50 rounded">
          <img src="<%= (o.craft.images && o.craft.images[0]) || '/images/placeholder.png' %>" class="w-16 h-16 rounded mr-4">
          <div class="flex-1">
            <p class="font-medium"><%= o.craft.name %></p>
            <p>Qty: <%= o.quantity %> | Total: ₹<%= o.totalPrice %></p>
            <p class="text-sm text-gray-500">Ordered: <%= new Date(o.createdAt).toLocaleDateString() %> • Delivered</p>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
